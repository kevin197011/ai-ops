  function cancelLinkEdit(id) {
    // Show normal row and hide edit row
    document.querySelector('.link-row-' + id).classList.remove('hidden');
    document.querySelector('.edit-link-row-' + id).classList.add('hidden');
  }

  // Update link function
  function updateLink(event, id) {
    event.preventDefault();

    const title = document.getElementById('edit-link-title-' + id).value;
    const url = document.getElementById('edit-link-url-' + id).value;
    const description = document.getElementById('edit-link-description-' + id).value;
    const icon = document.getElementById('edit-link-icon-' + id).value;
    const sortOrder = document.getElementById('edit-link-sort-' + id).value;
    const categoryId = document.getElementById('edit-link-category-' + id).value;

    // Show loading notification
    showNotification('正在更新链接...', 'warning');

    fetch(`/admin/links/${id}`, {
      method: 'PUT',
      headers: {
        'Content-Type': 'application/json',
      },
      credentials: 'same-origin',
      body: JSON.stringify({
        title: title,
        url: url,
        description: description,
        icon: icon,
        sort_order: sortOrder,
        category_id: categoryId
      })
    })
    .then(response => response.json())
    .then(data => {
      if (data.success) {
        showNotification('链接更新成功！', 'success');
        setTimeout(() => {
          location.reload();
        }, 1000);
      } else {
        showNotification('更新失败，请重试', 'error');
      }
    })
    .catch(error => {
      console.error('Error:', error);
      showNotification('更新失败，请重试', 'error');
    });
  }

  // Edit emoji picker functions
  function showEditEmojiPicker(linkId) {
    document.getElementById('editEmojiPicker-' + linkId).classList.remove('hidden');
  }

  function hideEditEmojiPicker(linkId) {
    document.getElementById('editEmojiPicker-' + linkId).classList.add('hidden');
  }

  function selectEditEmoji(linkId, emoji) {
    document.getElementById('edit-link-icon-' + linkId).value = emoji;
    hideEditEmojiPicker(linkId);
  }
</script>