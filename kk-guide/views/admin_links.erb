<script>
  // Add link form submission
  document.getElementById('addLinkForm').addEventListener('submit', function(event) {
    event.preventDefault();

    const formData = new FormData(this);
    const title = formData.get('title');
    const url = formData.get('url');
    const description = formData.get('description');
    const icon = formData.get('icon');
    const sortOrder = formData.get('sort_order');
    const categoryId = formData.get('category_id');

    // Show loading notification
    showNotification('正在添加链接...', 'warning');

    fetch('/admin/links', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      },
      credentials: 'same-origin',
      body: JSON.stringify({
        title: title,
        url: url,
        description: description,
        icon: icon,
        sort_order: sortOrder,
        category_id: categoryId
      })
    })
    .then(response => {
      if (response.redirected) {
        // Traditional form submission was successful
        showNotification('链接添加成功！', 'success');
        setTimeout(() => {
          location.reload();
        }, 1000);
      } else {
        return response.json();
      }
    })
    .then(data => {
      if (data && data.success) {
        showNotification('链接添加成功！', 'success');
        // Reset form
        document.getElementById('addLinkForm').reset();
        setTimeout(() => {
          location.reload();
        }, 1000);
      } else if (data && !data.success) {
        showNotification('添加失败，请重试', 'error');
      }
    })
    .catch(error => {
      console.error('Error:', error);
      showNotification('添加失败，请重试', 'error');
    });
  });

