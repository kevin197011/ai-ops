# 运维导航系统环境配置示例
# 复制此文件为 .env 并根据需要修改配置

# 应用环境 (development/production)
RACK_ENV=production

# 会话密钥 (生产环境请使用更安全的密钥)
# 可以使用 openssl rand -base64 32 生成
SESSION_SECRET=your_very_secure_session_secret_key_here_at_least_32_bytes_long

# 数据库文件路径
DATABASE_PATH=/app/data/navigation.db

# 时区设置
TZ=Asia/Shanghai

# Nginx 配置 (如果使用完整部署)
NGINX_PORT=80
NGINX_SSL_PORT=443

# 域名配置 (用于 SSL 证书)
DOMAIN_NAME=navigation.yourdomain.com

# 管理员配置 (可选，用于初始化)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# 应用配置
APP_NAME=运维导航系统
APP_VERSION=1.0.0

# 日志级别 (debug/info/warn/error)
LOG_LEVEL=info

# 备份配置
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # 每天凌晨2点备份